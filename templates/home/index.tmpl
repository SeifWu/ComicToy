{{ define "home/index.tmpl" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ .title }}</title>
  <link rel="shortcut icon" href="/assets/favicon.ico">
  <link rel="stylesheet" type="text/css" href="/assets/css/semantic.min.css">
  <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
  <script src="/assets/css/semantic.min.css"></script>
  <style>
    .home-page-comic-cover {
      display: block;
      position: relative;
      width: 100%;
      padding-bottom: 100%;
      margin-bottom: 0.5rem;
      border-radius: 0.3rem 0.3rem 0 0;
    }

    .home-page-comic-cover .home-page-cover-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      border-radius: 0.3rem 0.3rem 0 0;
    }

    .home-page-comic-content {
      padding: 0 0.6rem;
    }

    .home-page-comic-content .home-page-comic-title {
      display: block;
      margin-bottom: 0.2rem;
      font-size: 0.75rem;
      color: #333;
      min-height: 1.05rem;
      padding-top: 1px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .home-page-comic-content .home-page-comic-desc {
      display: block;
      margin-bottom: 0.7rem;
      font-size: 0.6rem;
      color: #0c1220;
      min-height: 0.8rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
</head>
<body>
  <div class="ui grid container" style="padding-top: 12px;">
    {{ range .list }}
      <div class="eight wide column">
        <a href="/comic/{{ .ID }}" style="display: block;">
          <div class="home-page-comic-cover" >
            <img class="home-page-cover-image" src="{{ .Cover }}" alt="{{ .Name }}"/>
          </div>
          <div class="home-page-comic-content">
            <strong class="home-page-comic-title">{{ .Name }}</strong>
            <small class="home-page-comic-desc">
              {{ .Introduce }}
            </small>
          </div>
        </a>
      </div>
    {{ else }}
      <div class="eight wide column">没有数据</div>
    {{ end }}
  </div>

</body>
</html>
{{ end }}